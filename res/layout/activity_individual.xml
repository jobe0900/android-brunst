<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android_projekt.individ.IndividualActivity" >

    <!-- android:textAppearance="?android:attr/textAppearanceMedium" -->
    <TextView
        android:id="@+id/individual_label_idnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/individual_label_idnr"
        />

    <EditText
        android:id="@+id/individual_entry_id_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/individual_label_idnr"
        android:layout_below="@id/individual_label_idnr"
        android:minEms="2"
        android:maxLength="2"
        android:text="@string/production_site_org_default"
        android:imeOptions="actionNext"
        />

    <EditText
        android:id="@+id/individual_entry_id_ppnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/individual_entry_id_org"
        android:layout_toRightOf="@id/individual_entry_id_org"
        android:minEms="4"
        android:maxLength="6"
        android:inputType="number"
        android:imeOptions="actionNext"
        />
    
    <EditText
        android:id="@+id/individual_entry_id_individnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/individual_entry_id_ppnr"
        android:layout_toRightOf="@id/individual_entry_id_ppnr"
        android:minEms="3"
        android:maxLength="4"
        android:inputType="number"
        android:imeOptions="actionNext"
        />
    
    <EditText
        android:id="@+id/individual_entry_id_checknr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/individual_entry_id_individnr"
        android:layout_toRightOf="@id/individual_entry_id_individnr"
        android:minEms="1"
        android:maxLength="1"
        android:inputType="number"
        />
    
     <TextView
        android:id="@+id/individual_label_shortnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@+id/individual_entry_shortnr"
        android:layout_marginRight="8dp"
        android:text="@string/individual_label_shortnr"
        />
     
      <EditText
        android:id="@id/individual_entry_shortnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/individual_label_shortnr"
        android:layout_marginTop="20dp"
        android:layout_below="@id/individual_entry_id_org"
        android:minEms="2"
        android:maxLength="4"
        android:inputType="number"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    
    

</RelativeLayout>
